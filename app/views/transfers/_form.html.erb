<%= simple_form_for(@transfer) do |f| %>
  <%= f.error_notification %>

  <%= f.input :date, as: :string %>
  <%= f.input :memo %>
  <%= f.input :from_account_id, collection: Account.order(:name).collect {|a| [a.name, a.id]} %>
  <%= f.input :to_account_id, collection: Account.order(:name).collect {|a| [a.name, a.id]} %>
  <%= f.input :amount %>

  <%= f.button :submit %>
<% end %>
