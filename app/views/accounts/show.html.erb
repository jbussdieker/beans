<% title @account.name %>

<p>
  <%= link_to 'Back', accounts_path, class: 'btn btn-default' %>
</p>

<p>
  <strong>Type:</strong>
  <%= @account.account_type %>
</p>

<p>
  <strong>Description:</strong>
  <%= @account.description %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Payee</th>
    </tr>
  </thead>

  <tbody>
    <% @account.transactions.each do |transaction, amount| %>
      <tr>
        <td><%= transaction.date %></td>
        <td><%= transaction.payee %></td>
        <td><%= amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
