<% title 'Transactions' %>

<p>
  <%= link_to 'New Transaction', new_transaction_path, class: 'btn btn-primary' %>
  <%= link_to 'New Transfer', new_transfer_path, class: 'btn btn-primary' %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Payee</th>
      <th>Memo</th>
      <th class="amount-column">Amount</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= link_to transaction.date, transaction_path(transaction) %></td>
        <td><%= transaction.type %></td>
        <td><%= transaction.payee %></td>
        <td><%= transaction.memo %></td>
        <td class="amount-column"><%= currency transaction.amount %></td>
        <td class="action-column">
          <%= link_to 'Edit', edit_polymorphic_path(transaction), class: 'btn btn-xs btn-default' %>
          <%= link_to 'Destroy', transaction_path(transaction), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
