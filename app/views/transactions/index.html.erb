<% title 'Transactions' %>

<p>
  <%= link_to 'New Transaction', new_transaction_path, class: 'btn btn-primary' %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Payee</th>
      <th>Memo</th>
      <th>Amount</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date %></td>
        <td><%= transaction.payee %></td>
        <td><%= transaction.memo %></td>
        <td><%= number_to_currency transaction.amount %></td>
        <td>
          <%= link_to 'Show', transaction, class: 'btn btn-xs btn-default' %>
          <%= link_to 'Edit', edit_transaction_path(transaction), class: 'btn btn-xs btn-default' %>
          <%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
