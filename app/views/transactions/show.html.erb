<% title @transaction.date %>

<p>
  <%= link_to 'Back', transactions_path, class: 'btn btn-default' %>
</p>

<p>
  <strong>Date:</strong>
  <%= @transaction.date %>
</p>

<p>
  <strong>Memo:</strong>
  <%= @transaction.memo %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Account</th>
      <th class="amount-column">Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @transaction.journals.each do |journal| %>
      <tr>
        <td><%= journal.account %></td>
        <td class="amount-column"><%= currency journal.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
